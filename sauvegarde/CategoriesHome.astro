---
const { categories = [] } = Astro.props;
---

<section class="px-4 md:px-8 lg:px-12 my-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
  {categories.map((cat) => (
    <a
      href={`/categorie/${cat.slug}`}
      class="block border rounded-xl p-6 hover:shadow-lg transition"
    >
      <h2 class="text-xl font-bold mb-2">{cat.nom ?? cat.Nom}</h2>

      {/* Injection du HTML riche depuis Strapi */}
      <div
        class="text-sm text-zinc-600 space-y-2 prose"
        set:html={cat.descriptionHtml}
      />
    </a>
  ))}
</section>
