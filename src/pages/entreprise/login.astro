// src/pages/entreprise/login.astro
import { BASE } from '../../lib/strapi';

let errorMessage = '';
let successMessage = '';

// R√©cup√©ration du param√®tre redirect
const redirectUrl = Astro.url.searchParams.get('redirect');
console.log('üè¢ ENTREPRISE LOGIN - Param√®tre redirect:', redirectUrl);

// V√©rifier si d√©j√† connect√© avec un cookie entreprise
const entrepriseAuthToken = Astro.cookies.get('entreprise-auth-token')?.value;
const entrepriseData = Astro.cookies.get('entreprise-data')?.value;

if (entrepriseAuthToken && entrepriseData) {
  console.log('üè¢ Entreprise d√©j√† connect√©e, redirection...');
  if (redirectUrl) {
    return Astro.redirect(redirectUrl);
  } else {
    return Astro.redirect('/entreprise/dashboard');
  }
}

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;
    const redirectAfterLogin = formData.get('redirect') as string;

    console.log('üè¢ Tentative de connexion entreprise avec email:', email);
    console.log('üè¢ Redirect apr√®s login:', redirectAfterLogin);

    // Rechercher l'entreprise directement par email et mot de passe
    const entrepriseUrl = `${BASE}/api/entreprises?filters[email][$eq]=${encodeURIComponent(email)}&filters[password][$eq]=${encodeURIComponent(password)}`;
    console.log('üè¢ URL de recherche entreprise:', entrepriseUrl);

    const entrepriseResponse = await fetch(entrepriseUrl);
    const entrepriseData = await entrepriseResponse.json();
    
    console.log('üè¢ R√©ponse API entreprise:', JSON.stringify(entrepriseData, null, 2));
      
    if (entrepriseData.data && entrepriseData.data.length > 0) {
      // Authentification r√©ussie
      console.log('üè¢ Authentification r√©ussie pour:', email);
      
      // Cr√©er un token simple 
      const simpleToken = Buffer.from(`${email}:${Date.now()}`).toString('base64');
      
      // Stocker le token et les donn√©es entreprise dans les cookies
      Astro.cookies.set('entreprise-auth-token', simpleToken, {
        path: '/',
        maxAge: 60 * 60 * 24 * 7, // 7 jours
      });
      
      // Stocker un objet simple avec les donn√©es importantes
      const entrepriseObj = {
        id: entrepriseData.data[0].id,
        nom: entrepriseData.data[0].nom || entrepriseData.data[0].contact_nom,
        email: entrepriseData.data[0].email
      };
      
      Astro.cookies.set('entreprise-data', JSON.stringify(entrepriseObj), {
        path: '/',
        maxAge: 60 * 60 * 24 * 7, // 7 jours
      });

      // Redirection
      if (redirectAfterLogin) {
        console.log('üè¢ REDIRECTION vers:', redirectAfterLogin);
        return Astro.redirect(redirectAfterLogin);
      } else {
        console.log('üè¢ REDIRECTION vers dashboard');
        return Astro.redirect('/entreprise/dashboard');
      }
    } else {
      console.log('üè¢ Aucune entreprise trouv√©e avec ces identifiants');
      errorMessage = "Identifiants incorrects. Veuillez v√©rifier votre email et mot de passe.";
    }
  } catch (error) {
    console.error('üè¢ Erreur auth entreprise:', error);
    errorMessage = 'Erreur de connexion au serveur. Veuillez r√©essayer plus tard.';
  }
}
