// src/pages/espace-client/login.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

let errorMessage = '';
let successMessage = '';

// ðŸ”’ RÃ©cupÃ©ration du paramÃ¨tre redirect
const redirectUrl = Astro.url.searchParams.get('redirect');
console.log('ðŸ”’ LOGIN - ParamÃ¨tre redirect:', redirectUrl); // DEBUG

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    // Appel API Strapi
    const response = await fetch('http://82.112.254.196:1337/api/auth/local', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        identifier: email,
        password: password,
      }),
    });

    const data = await response.json();

    if (response.ok) {
      // Connexion rÃ©ussie - stocker le token et rediriger
      Astro.cookies.set('auth-token', data.jwt, {
        httpOnly: true,
        secure: true,
        sameSite: 'strict',
        maxAge: 60 * 60 * 24 * 7, // 7 jours
        path: '/'
      });
      
      Astro.cookies.set('user-data', JSON.stringify(data.user), {
        httpOnly: true,
        secure: true,
        sameSite: 'strict',
        maxAge: 60 * 60 * 24 * 7,
        path: '/'
      });

      // ðŸ”’ GESTION DE LA REDIRECTION
      if (redirectUrl) {
        console.log('ðŸ”’ LOGIN - Redirection vers:', redirectUrl); // DEBUG
        return Astro.redirect(redirectUrl);
      } else {
        console.log('ðŸ”’ LOGIN - Pas de redirect, vers dashboard'); // DEBUG
        return Astro.redirect('/espace-client/dashboard');
      }
    } else {
      errorMessage = data.error?.message || 'Identifiants incorrects';
    }
  } catch (error) {
    errorMessage = 'Erreur de connexion au serveur';
    console.error('Erreur auth:', error);
  }
}
