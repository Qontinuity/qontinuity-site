  description="Votre espace personnel pour g√©rer vos formations IA."
>
  <!-- Banni√®re Hero -->
  <Hero logoClass="w-80 max-w-none" />

  <main class="min-h-screen bg-gray-50">
    <!-- Titre centr√© -->
